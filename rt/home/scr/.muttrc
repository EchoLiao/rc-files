send-hook  . 'set sendmail="/usr/local/msmtp/bin/msmtp"'
alternates "nuoerlz@gmail.com|tge3636@126.com|lcy3636@126.com"
set from="nuoerlz@gmail.com"    #默认的发信人 
set use_from=yes                #mutt自动生成from地址 
set use_from=yes                #mutt自动生成from地址 
